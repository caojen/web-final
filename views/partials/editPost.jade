div#edit-post
  table#edit-post-table
    tr
      th#edit-post-username Username
      th#edit-post-time Last Submit Time
        img.static-icons(src="/image/static-icons/time.png")
    tr
      td
        img.static-icons(src='/image/static-icons/user.png')
        | {{form.username}}
      td {{form.time}}
  
  input#edit-post-title(ng-model='form.title', placeholder="Title")
  p#edit-post-body
    textarea#edit-post-body-text(ng-model='form.text')
  p
    a#edit-post-submit(href="javascript:;", ng-click='editPost()') Submit Post
    a#edit-post-back(href='/') Back