div#add-post
  table#add-post-table
    tr
      th#add-post-username Username
      th#add-post-time Current Time
        img.static-icons(src="/image/static-icons/time.png")
    tr
      td {{form.username}}
      td {{form.time}}
  input#add-post-title(ng-model='form.title', placeholder="Title")
  p#add-post-body
    textarea(ng-model='form.text')
  p
    a#add-post-submit(href="javascript:;", ng-click='submitPost()') Submit Post
    a#add-post-back(href='/') Back